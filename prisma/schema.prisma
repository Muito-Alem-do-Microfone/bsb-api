generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Announcement {
  id  Int @id @default(autoincrement())
  title String
  name  String
  number String
  email String
  type String
  state String
  city String
  description String
  instruments Instrument[] @relation("AnnouncementInstruments")
  genres Genre[] @relation("AnnouncementGenres")
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Instrument {
  id Int @id @default(autoincrement())
  name String
  type String
  announcements Announcement[] @relation("AnnouncementInstruments")
}

model Genre {
  id Int @id @default(autoincrement())
  name String
  announcements Announcement[] @relation("AnnouncementGenres")
}