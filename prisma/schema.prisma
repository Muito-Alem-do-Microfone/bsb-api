generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Announcement {
  id          Int          @id @default(autoincrement())
  title       String
  name        String
  number      String
  email       String
  type        String
  state       String
  city        String
  description String
  instruments Instrument[] @relation("AnnouncementInstruments")
  genres      Genre[]      @relation("AnnouncementGenres")
  socialLinks SocialLink[]
  createdAt   DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model Instrument {
  id            Int            @id @default(autoincrement())
  name          String
  type          String
  announcements Announcement[] @relation("AnnouncementInstruments")
}

model Genre {
  id            Int            @id @default(autoincrement())
  name          String
  announcements Announcement[] @relation("AnnouncementGenres")
}

model SocialMedia {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  SocialLinks SocialLink[]
}

model SocialLink {
  id             Int          @id @default(autoincrement())
  url            String
  socialMediaId  Int
  announcementId Int
  socialMedia    SocialMedia  @relation(fields: [socialMediaId], references: [id], onDelete: Cascade)
  announcement   Announcement @relation(fields: [announcementId], references: [id], onDelete: Cascade)
}
